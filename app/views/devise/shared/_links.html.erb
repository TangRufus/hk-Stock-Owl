<div class="block-options pull-right">
  <%- if controller_name != 'sessions' %>
  <%= link_to "<i class='gi gi-user'></i>".html_safe, new_user_session_path, class: 'btn btn-effect-ripple btn-primary', data: { toggle: 'tooltip', placement: 'left' }, title: 'Log in' %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "<i class='gi gi-user_add'></i>".html_safe, new_user_join_path, class: 'btn btn-effect-ripple btn-primary', data: { toggle: 'tooltip', placement: 'left' }, title: 'Create new account' %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "<i class='fa fa-exclamation-circle'></i>".html_safe, forgot_password_path, class: 'btn btn-effect-ripple btn-primary', data: { toggle: 'tooltip', placement: 'left' }, title: 'Forgot your password?' %>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
   <%= link_to "<i class='gi gi-envelope'></i>".html_safe, resend_confirmation_path, class: 'btn btn-effect-ripple btn-primary', data: { toggle: 'tooltip', placement: 'left' }, title: "Didn't receive confirmation instructions?" %>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
   <%= link_to "<i class='fa fa-unlock'></i>".html_safe, unlock_account_path, class: 'btn btn-effect-ripple btn-primary', data: { toggle: 'tooltip', placement: 'left' }, title: "Didn't receive unlock instructions?" %>
  <% end -%>
</div>

