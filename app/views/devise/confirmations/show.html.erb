<h2>You're almost done! Now create a password to securely access your account.</h2>

<%= simple_form_for(resource, as: resource_name, url: confirm_path, html: { method: :patch }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs">
    <%= f.input :password, required: true, autofocus: true %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :confirmation_token, :as => :hidden, :input_html => { :value => @original_token } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Confirm my account", class: "right large radius" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
