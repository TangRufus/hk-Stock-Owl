<!-- Login Title -->
<div class="block-title">
  <%= render 'devise/shared/links' %>
  <h2>You're almost done! Now create a password to securely access your account.s</h2>
</div>
<!-- END Login Title -->

<!-- Login Form -->
<%= simple_form_for(resource, as: resource_name, url: confirm_path, wrapper: :vertical_form, html: { method: :patch }) do |f| %>
  <%= f.error_notification %>
      <%- if f.full_error :confirmation_token %>
    <div class="alert alert-danger fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= f.full_error :confirmation_token %>
    </div>
  <%- end %>
<div class="form-inputs">
  <%= f.input :email, wrapper: :vertical_input_group, as: :email, autofocus: true, required: true, disabled: true %>
  <%= f.input :password, wrapper: :vertical_input_group, required: true, autofocus: true %>
  <%= f.input :password_confirmation, wrapper: :vertical_input_group, required: true %>
  <%= f.input :confirmation_token, :as => :hidden, :input_html => { :value => @original_token } %>
</div>

<div class="form-actions">
  <%= f.button :button, 'Confirm my account', class: 'btn-block btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>&nbsp;&nbsp;Sending..."} %>
</div>
<br />
<% end %>
<!-- END Login Form -->
