<!-- Login Title -->
<div class="block-title">
  <%= render 'devise/shared/links' %>
  <h2>Change your password</h2>
</div>
<!-- END Login Title -->

<!-- Login Form -->
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: :vertical_form, html: { method: :put }) do |f| %>
<div class="form-inputs">
    <%= f.hidden_field :reset_password_token %>
    <%= f.input :password, label: "New password", required: true, autofocus: true, wrapper: :vertical_input_group %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true, wrapper: :vertical_input_group %>
</div>

<div class="form-actions">
  <%= f.button :button, 'Change my password', class: 'btn-block btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>&nbsp;&nbsp;Changing..."} %>
</div>
<br />
<% end %>
<!-- END Login Form -->
