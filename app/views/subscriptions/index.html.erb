<h1>Subscriptions#index</h1>

<%= form_for :subscription do |f| %>
  <%= f.text_field :code, inline_label: 'Code' %>
  <%= f.button :submit %>
  <% end %>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Button</th>
  </tr>

  <% @subscriptions.each do |subscription| %>
  <tr>
    <td><%= subscription.subscriptable.name %></td>
    <td><%= subscription.subscriptable.code %></td>
    <td><%= link_to 'Destroy', subscription_path(subscription), :authenticity_token => form_authenticity_token, :method => :delete %></td>
  </tr>
  <% end %>
</table>
